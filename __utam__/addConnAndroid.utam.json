{
    "root":true,
    "platform":"native",
    "selector":{
       "uiautomator":"resourceIdMatches(\".*sf__layout_root\")"
    },
    "methods":[
       {
          "name":"addConnection",
          "compose":[
             {
                "element":"name",
                "apply":"setText",
                "args":[
                   {
                      "name":"name",
                      "type":"string"
                   }
                ]
             },
             {
                "element":"url",
                "apply":"setText",
                "args":[
                   {
                      "name":"url",
                      "type":"string"
                   }
                ]
             },
             {
                "element":"applyBtn",
                "apply":"click"
             }
          ]
       }
    ],
    "elements":[
       {
          "name":"name",
          "type":["editable"],
          "selector":{
             "uiautomator":"resourceIdMatches(\".*sf__picker_custom_label\")"
          }
       },
       {
          "name":"url",
          "type":["editable"],
          "selector":{
             "uiautomator":"resourceIdMatches(\".*sf__picker_custom_url\")"
          }
       },
       {
          "name":"applyBtn",
          "type": ["clickable"],
          "selector":{
             "uiautomator":"resourceIdMatches(\".*sf__apply_button\")"
          }
       }
    ]
 }