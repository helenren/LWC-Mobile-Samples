{
    "root": true,
    "selector": {
        "css": "localdevserver-app"
    },
    "shadow": {
        "elements": [
            {
                "name": "layout",
                "selector": {
                    "css": "localdevserver-layout"
                },
                "shadow": {
                    "elements": [
                        {
                            "name": "view",
                            "selector": {
                                "css": "localdevserver-view"
                            },
                            "shadow": {
                                "elements": [
                                    {
                                        "name": "dynamic",
                                        "selector": {
                                            "css": "localdevserver-dynamic"
                                        },
                                        "shadow": {
                                            "elements": [
                                                {
                                                    "name": "section",
                                                    "selector": {
                                                        "css": "localdevserver-layout-section"
                                                    },
                                                    "shadow": {
                                                        "elements": [
                                                            {
                                                                "name": "content",
                                                                "selector": {
                                                                    "css": "div.preview-conten div"
                                                                }
                                                            },
                                                            {
                                                                "name": "header-buttons",
                                                                "type": "clickable",
                                                                "selector": {
                                                                    "css": "div.header-buttons",
                                                                    "returnAll": true
                                                                },
                                                                "filter": {
                                                                    "apply": "getText",
                                                                    "findFirst": true,
                                                                    "matcher": {
                                                                        "type": "stringContains",
                                                                        "args": [
                                                                            {
                                                                                "name": "partialText",
                                                                                "type": "string"
                                                                            }
                                                                        ]
                                                                    }
                                                                }
                                                            }
                                                        ]
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "methods": [
        {
            "name": "getInnerText",
            "compose": [
                {
                    "element": "content",
                    "apply": "getText"
                }
            ]
        },
        {
            "name": "clickButton",
            "compose": [
                {
                    "element": "header-buttons",
                    "apply": "waitForVisible"
                },
                {
                    "element": "header-buttons",
                    "apply": "click"
                }
            ]
        }
    ]
}